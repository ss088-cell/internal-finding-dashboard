function sendMail() {
  const sheetId = 'YOUR_SHEET_ID'; // Replace with your Google Sheet ID
  const ss = SpreadsheetApp.openById(sheetId); // Open the Google Sheet by ID
  
  // Get the Google Sheet file
  const file = DriveApp.getFileById(sheetId);

  // Email content
  const emailAddress = 'your-email@example.com'; // Replace with the recipient's email address
  const subject = 'Internal Findings Dashboard Report';
  const body = 'Please find the attached Google Sheet - Internal Findings Dashboard report.';

  // Send the email with the entire Google Sheet as an attachment (Google Sheets format)
  GmailApp.sendEmail({
    to: emailAddress,
    subject: subject,
    body: body,
    attachments: [file.getAs(MimeType.GOOGLE_SHEETS)] // Attach the whole Google Sheet
  });

  Logger.log('Email sent successfully with the Google Sheet attached.');
}

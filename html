    <style>
      body {
        background-color: #87CEEB; /* Sky blue background */
        font-family: 'Trebuchet MS', sans-serif; /* Set font to Trebuchet MS */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        flex-direction: column;
        color: #333;
      }
      h1 {
        font-size: 2.5em;
        margin-bottom: 30px;
        color: #004d99;
        text-align: center;
      }
      /* Center the button */
      .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
      }
      .button {
        background-color: #007bff; /* Button background color */
        color: white;
        border: none;
        padding: 15px 30px;
        font-size: 18px;
        cursor: pointer;
        border-radius: 8px;
        transition: transform 0.3s ease, background-color 0.3s ease;
      }
      .button:hover {
        background-color: #0056b3;
        transform: scale(1.1); /* Button animation on hover */
      }
      .button:active {
        background-color: #004085;
      }
      .button:focus {
        outline: none;
      }

      /* Toast Notification */
      .toast {
        visibility: hidden;
        min-width: 250px;
        margin-left: -125px;
        background-color: #333;
        color: white;
        text-align: center;
        border-radius: 2px;
        padding: 16px;
        position: fixed;
        z-index: 1;
        left: 50%;
        bottom: 30px;
        font-size: 17px;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
      }
      .toast.show {
        visibility: visible;
        opacity: 1;
      }

      /* Execution Log Container */
      #logContainer {
        width: 80%;
        max-height: 200px;
        overflow-y: auto;
        background-color: #f4f4f4;
        padding: 10px;
        margin-top: 20px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 14px;
        color: #333;
        display: none; /* Hidden initially */
      }

      /* Success Popup */
      .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #4CAF50;
        color: white;
        padding: 20px;
        border-radius: 8px;
        font-size: 18px;
        text-align: center;
        z-index: 2;
      }

      /* Stop Button Styling */
      #stopButton {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 8px;
        margin-top: 10px;
        display: none; /* Hidden initially */
      }

      #stopButton:hover {
        background-color: #c82333;
      }
    </style>
  </head>
  <body>
    <div class="content">
      <h1>Fetch Current Count for Internal Vulnerabilities</h1>
      <!-- Center the button in the page -->
      <div class="button-container">
        <button class="button" onclick="generateCount()">Generate Count</button>
      </div>
    </div>

    <!-- Toast notification -->
    <div id="toast" class="toast">Fetching Data...</div>

    <!-- Execution Log Container -->
    <div id="logContainer"></div>

    <!-- Success Popup -->
    <div id="popup" class="popup">New Count Generated successfully!</div>

    <!-- Stop Button -->
    <button id="stopButton" onclick="stopProcess()">Stop Process</button>

    <script>
      var isStopped = false; // Flag to indicate whether the process should be stopped

      // Show toast notification
      function showToast(message) {
        var toast = document.getElementById("toast");
        toast.innerHTML = message;
        toast.className = "toast show";
        setTimeout(function () {
          toast.className = toast.className.replace("show", "");
        }, 3000);
      }

      // Update log container with the execution log
      function updateLog(message) {
        const logContainer = document.getElementById("logContainer");
        logContainer.style.display = "block"; // Show log container
        logContainer.innerHTML += `<p>${message}</p>`;
        logContainer.scrollTop = logContainer.scrollHeight; // Scroll to the bottom
      }

      // Function to call the Apps Script function when the button is clicked
      function generateCount() {
        isStopped = false; // Reset stop flag
        showToast('Fetching Data...');
        updateLog('Process started...');
        document.getElementById('stopButton').style.display = 'inline-block'; // Show stop button

        google.script.run
          .withSuccessHandler(function(response) {
            if (!isStopped) {
              updateLog('Process completed!');
              showPopup();
              setTimeout(function() {
                alert(response); // Final success alert
              }, 500);  // Delay to show the message properly before alert
            }
          })
          .withFailureHandler(function(error) {
            updateLog('Error occurred: ' + error.message);
          })
          .generateCount(); // Calls the Apps Script function 'generateCount'
      }

      // Show success popup
      function showPopup() {
        var popup = document.getElementById("popup");
        popup.style.display = "block";
        setTimeout(function () {
          popup.style.display = "none"; // Hide after 3 seconds
        }, 3000);
      }

      // Stop the process
      function stopProcess() {
        isStopped = true; // Set the flag to stop
        updateLog('Process stopped by user.');
        document.getElementById('stopButton').style.display = 'none'; // Hide the stop button
      }
    </script>
  </body>
</html>

